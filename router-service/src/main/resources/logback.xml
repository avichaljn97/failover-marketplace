<configuration>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/routerService.log</file> <!-- Current active log file -->

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/routerService.%d{yyyy-MM-dd}.log.gz</fileNamePattern> <!-- Rolled file compressed -->
            <maxHistory>3</maxHistory> <!-- Keep last 3 days logs -->
        </rollingPolicy>

        <encoder>
            <pattern>[%d{yyyy-MM-dd HH:mm:ss}] [%thread] %-5level %logger{0} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- ⬇️ Silence Kafka internal noisy logs -->
    <logger name="org.apache.kafka" level="ERROR" />
    <logger name="org.apache.kafka.clients" level="ERROR" />
    <logger name="org.apache.kafka.common" level="ERROR" />
    <logger name="org.apache.zookeeper" level="ERROR" />

    <!-- ⬇️ Root logger: your application logs -->
    <root level="INFO">
        <appender-ref ref="FILE" />
    </root>

</configuration>
